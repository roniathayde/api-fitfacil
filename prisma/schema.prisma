generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ALUNO
  TREINADOR
}

model User {
  id           String  @id @default(uuid())
  username     String
  password     String
  email        String  @unique
  full_name    String
  phone_number String
  role         Role    @default(TREINADOR)
  Trains       Trains? @relation(fields: [trainsId], references: [id])
  trainsId     String?
}

model Trains {
  id          String   @id @default(uuid())
  title       String
  description String
  done        Boolean
  created_at  DateTime
  user        User[]
}
