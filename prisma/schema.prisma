generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ALUNO
  TREINADOR
}

enum Difficulty {
  FACIL
  MEDIO
  DIFICIL
}

model User {
  id           String @id @default(uuid())
  username     String
  password     String
  email        String @unique
  full_name    String
  phone_number String

  UserTrains UserTrains[]
}

model UserTrains {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  trains   Trains @relation(fields: [trainsId], references: [id])
  trainsId String

  role Role @default(TREINADOR)
}

model Trains {
  id              String     @id @default(uuid())
  title           String
  description     String
  done            Boolean    @default(false)
  scheduled_to    DateTime
  duration_in_sec String
  created_at      DateTime   @default(now())
  difficulty      Difficulty @default(MEDIO)

  categoryId String?
  Category   Category[]
  UserTrains UserTrains[]
}

model Category {
  id       String @id @default(uuid())
  name     String
  trains   Trains @relation(fields: [trainsId], references: [id])
  trainsId String
}
